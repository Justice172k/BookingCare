<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .btn-edit {
            outline: none;
            border: none;
            background: orange;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-delete {
            outline: none;
            border: none;
            background: red;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <table style="width:100%;">
        <tr>
            <th>Email</th>
            <th>first Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% for(let i=0; i < data.length; i++) { %>
            <tr>
                <td>
                    <%= data[i].email %>
                </td>
                <td>
                    <%= data[i].firstName%>
                </td>
                <td>
                    <%= data[i].lastName%>
                </td>
                <td>
                    <%= data[i].address%>
                </td>
                <td>
                    <button type="button" class="btn-edit"><a href="/edit-crud?id=<%= data[i].id%>">Edit</a></button>
                    <button type="button" class="btn-delete"><a
                            href="/delete-crud?id=<%= data[i].id%>">Delete</a></button>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>